{
  "name": "mixjovim-backend",
  "version": "1.0.0",
  "description": "Backend API para sistema de gestÃ£o de estoque",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:clean": "npm run kill:node && npm run dev",
    "kill:node": "taskkill /F /IM node.exe 2>nul || echo \"Nenhum processo Node.js ativo\"",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:setup": "ts-node src/database/setup.ts",
    "security:audit": "ts-node src/security/audit.ts",
    "security:check": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.14.1",
    "xlsx": "^0.18.5",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/hpp": "^0.2.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.9.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
